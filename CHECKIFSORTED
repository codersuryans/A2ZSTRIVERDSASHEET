public class CHECKIFSORTED {
    public static void main(String[] args) {
        int a[] = {1, 2, 2, 3, 3, 4};
        boolean sorted = true;

        for (int i = 1; i < a.length; i++) { 
            if (a[i] < a[i - 1]) {  
                sorted = false;
                break;
            }
        }

        if (sorted) {
            System.out.println("Array is sorted ");
        } else {
            System.out.println("Array is NOT sorted.");
        }
    }
}
